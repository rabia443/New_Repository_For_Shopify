<div class="container mx-auto px-4 py-24 md:py-32 w-full">
  <div class="max-w-lg">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
      {{ section.settings.heading }}
    </h1>
    <p class="text-lg text-gray-700 mb-8">
      {{ section.settings.subheading }}
    </p>
    <div class="flex flex-wrap gap-4">
      <a
        href="{{ section.settings.shop_now_link }}"
        class="py-3 px-6 bg-primary text-white font-medium rounded-button hover:bg-primary/90 transition-colors whitespace-nowrap"
      >
        {{ section.settings.shop_now_text }}
      </a>
      <a
        href="{{ section.settings.explore_link }}"
        class="py-3 px-6 bg-white text-gray-800 font-medium rounded-button border border-gray-200 hover:bg-gray-50 transition-colors whitespace-nowrap"
      >
        {{ section.settings.explore_text }}
      </a>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "hero-section relative",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Summer Collection 2025"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our latest arrivals designed for comfort and style. Premium quality that lasts."
    },
    {
      "type": "url",
      "id": "shop_now_link",
      "label": "Shop Now Button Link",
      "default": "https://example.com/shop"
    },
    {
      "type": "text",
      "id": "shop_now_text",
      "label": "Shop Now Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "explore_link",
      "label": "Explore Collection Button Link",
      "default": "https://example.com/shop"
    },
    {
      "type": "text",
      "id": "explore_text",
      "label": "Explore Button Text",
      "default": "Explore Collection"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}