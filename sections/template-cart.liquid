{% if cart.items_count > 0 %}
  <div class="p-4">
    <div class="max-w-6xl flex flex-col my-10 mx-auto">
      <div class="flex items-end justify-between my-5">
        <h1 class="text-3xl">Your Cart</h1>
        <a
          href="{{ routes.all_products_collection_url }}"
          class="text-blue-600 hover:text-blue-800 font-medium underline"
          >Continue shopping</a
        >
      </div>
    </div>
    <div class="max-w-6xl flex flex cols my-10 mx-auto">
      <form action="{{ routes.cart_url }}" method="POST" novalidate>
        <table class="table-auto divide-y divide-gray-200 my-4 w-full">
          <thead>
            <th class="px-6 py-3 text-left font-medium text-sm text-gray-500">Product</th>
            <th class="px-6 py-3 text-left font-medium text-sm text-gray-500">Quantity</th>
            <th class="px-6 py-3 text-left font-medium text-sm text-gray-500">Total Price</th>
          </thead>
          <tbody>
            {%- for item in cart.items -%}
              <tr class="table-row">
                <td class="py-4 px-2 flex flex-col justify-center">
                  <a href="{{ item.url }}">
                    {%- if item.image -%}
                      <img
                        src="{{ item.image | image_url:'small' }}"
                        alt="{{ item.title | escape }}"
                        class="w-20 h-20 object-cover border"
                      >
                    {%- else -%}
                      {{ 'product-1' | placeholder_svg_tag: 'h-20 w-20 object-cover border' }}
                    {%- endif -%}
                  </a>
                </td>
                <td class="py-4 px-2 flex flex-col justify-center">
                  <a href="{{ item.url }}" class="my-1">{{ item.product.title | truncatewords: 5 }}</a>
                  <span class="text-sm text-gray-500 my-1">{{ item.variant.title }}</span>
                  <a
                    href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
                    class="text-sm font-medium text-red-500 my-1"
                  ></a>
                  {%- comment -%}
                    ðŸ”¸ ?line={{ forloop.index }}&quantity=0
                    - line={{ forloop.index }}: cart mein kis item (line) ko change karna hai (1st, 2nd, etc).
                    - &quantity=0: quantity 0 ka matlab item ko cart se hata do.
                    âœ… Pura link: "cart/change par jao aur X number ka item remove kar do by setting quantity to 0".
                  {%- endcomment -%}
                </td>
                <td class="py-4 px-2">
                  <input
                    type="number"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="1"
                    id="updates_{{ forloop.index }}"
                    class="w-20 border p-2"
                  >
                  {%- comment -%}
                    forloop.index starts from 1, so on 1st loop id becomes: id="updates_1", on 2nd loop: id="updates_2", and so on.
                  {%- endcomment -%}
                </td>
                <td class="py-4 px-2">
                  {{ item.final_line_price | money }}
                </td>
              </tr>
            {%- endfor -%}
          </tbody>
        </table>
        <div class="flex flex-col md:flex-row items-center justify-between">
          <div class="w-full my-4">

            <div class="flex flex-col items-start">
                <label for="cart_notes" class="my-1">Cart notes</label>
                <textarea name="note" id="cart_notes" class="w-full md:max-w-lg resize-none border h-20"></textarea>
            </div>
          </div>
          <div class="w-full my-4 md:w-80">
            <h3 class="text-xl">Subtotal: {{ cart.total_price | money }}</h3>
<div class="my-2">
    <button name="update" type="submit" class="w-full p-3 border border-gray-600 text-gray-600 font-medium hover:bg-gray-600 hover:text-white">Update</button>
</div>
<div class="my-2">
    <button name="checkout" type="submit" class="w-full p-3 border border-gray-600 font-medium bg-gray-600 text-white">Checkout</button>
</div>

          </div>
        </div>
      </form>
    </div>
  </div>
{%- else -%}
  <div class="max-w-6xl h-60 my-4 mx-auto flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-3xl my-4">Your cart is empty</h1>
      <div class="my-4 py-4">
        <a
          href="{{ routes.all_products_collection_url }}"
          class="border border-gray-600 text-white bg-gray-600 px-8 py-3"
          >Continue Shopping</a
        >
      </div>
    </div>
  </div>
{%- endif -%}
